<Window x:Class="SEPM_ScannerUtility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" WindowState="Maximized" WindowStyle="SingleBorderWindow">
    <Grid Background="Green">
        <TextBox Name="ScannerTextBox" Background="Green"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground="White"
                 HorizontalContentAlignment="Left" VerticalContentAlignment="Top" FontSize="20" AcceptsReturn="True"></TextBox>
    </Grid>
</Window>
